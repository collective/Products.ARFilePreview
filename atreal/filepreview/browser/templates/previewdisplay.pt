<tal:hide condition="not:viewlet/hide|nothing">
<tal:block condition="context/getPreview|nothing">

     <div tal:condition="python:viewlet.display_choice==u'Embedded'"
	  tal:content="structure viewlet/hasPreview" />

     <a href="" tal:attributes="href string:${context/absolute_url}/++preview++html"
	tal:condition="python:viewlet.display_choice==u'Popup'"
	target="_blank">Voir la pr&eacute;visualisation</a>

     <a href="" tal:attributes="href string:${context/absolute_url}/++preview++html"
	tal:condition="python:viewlet.display_choice==u'iFrame'"
	target="_blank">Voir la pr&eacute;visualisation en plein &eacute;cran</a>
     <iframe
	 style="width: 100%; height: 30em;"
	 tal:condition="python:viewlet.display_choice==u'iFrame'"
	 tal:attributes="src string:${context/absolute_url}/++preview++html"
	 > l'iframe </iframe>

</tal:block>
</tal:hide>
